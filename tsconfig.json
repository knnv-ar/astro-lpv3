{
  "extends": "astro/tsconfigs/base",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"], 
      "@layouts/*": ["src/layouts/*"], 
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@content/*": ["src/content/*"],
      "@exhib/*": ["src/content/exhib/*"],
      "@styles/*": ["src/styles/*"],
      "@js/*": ["src/js/*"],
      "@data/*": ["src/data/*"],
    },
    "strictNullChecks": true,
    "allowJs": true
  }
}